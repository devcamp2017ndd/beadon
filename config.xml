<?xml version='1.0' encoding='utf-8'?>
<widget id="org.devcamp2017ndd.beadon" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>beadon</name>
    <description>
        OSS開発合宿2017のアプリケーション
    </description>
    <author href="https://github.com/devcamp2017ndd/beadon#readme">
        Developer Camp 2017 Team NDD
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#708090" />
    <icon src="res/icon.png" />
    <platform name="android">
    </platform>
    <platform name="ios">
        <icon height="180" src="res/ios/appicon-60@3x.png" width="180" />
        <icon height="60" src="res/ios/appicon-60.png" width="60" />
        <icon height="120" src="res/ios/appicon-60@2x.png" width="120" />
        <icon height="76" src="res/ios/appicon-76.png" width="76" />
        <icon height="152" src="res/ios/appicon-76@2x.png" width="152" />
        <icon height="40" src="res/ios/appicon-Small-40.png" width="40" />
        <icon height="80" src="res/ios/appicon-Small-40@2x.png" width="80" />
        <icon height="57" src="res/ios/appicon.png" width="57" />
        <icon height="114" src="res/ios/appicon@2x.png" width="114" />
        <icon height="72" src="res/ios/appicon-72.png" width="72" />
        <icon height="144" src="res/ios/appicon-72@2x.png" width="144" />
        <icon height="29" src="res/ios/appicon-Small.png" width="29" />
        <icon height="58" src="res/ios/appicon-Small@2x.png" width="58" />
        <icon height="50" src="res/ios/appicon-Small-50.png" width="50" />
        <icon height="100" src="res/ios/appicon-Small-50@2x.png" width="100" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.4.0" />
    <plugin name="com.unarin.cordova.beacon" spec="https://github.com/petermetz/cordova-plugin-ibeacon.git" />
    <plugin name="cordova-plugin-battery-status" spec="~1.1.1" />
    <plugin name="cordova-plugin-camera" spec="~2.1.1" />
    <plugin name="cordova-plugin-console" spec="~1.0.2" />
    <plugin name="cordova-plugin-contacts" spec="~2.0.1" />
    <plugin name="cordova-plugin-device" spec="~1.1.1" />
    <plugin name="cordova-plugin-device-motion" spec="~1.2.0" />
    <plugin name="cordova-plugin-device-orientation" spec="~1.0.2" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.0" />
    <plugin name="cordova-plugin-file" spec="~4.1.1" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.5.0" />
    <plugin name="cordova-plugin-geolocation" spec="~2.1.0" />
    <plugin name="cordova-plugin-globalization" spec="~1.0.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.3.0" />
    <plugin name="cordova-plugin-media" spec="~2.2.0" />
    <plugin name="cordova-plugin-media-capture" spec="~1.2.0" />
    <plugin name="cordova-plugin-network-information" spec="~1.2.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.2" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
</widget>
